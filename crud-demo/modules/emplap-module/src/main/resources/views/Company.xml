<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
	<grid name="company-grid" title="Companies" model="com.hh.emplap.db.Company" >
		<field name="name" />
		<field name="startDate" />
		<field name="logo" />
		<field name="clientSet" >
			<grid title="Clients" >
				<field name="name" />
			</grid>
		</field>
		
		<field name="employeeList" />
		
	</grid>
	<form name="company-form" title="Company" model="com.hh.emplap.db.Company" canAttach="true" readonlyIf="id"  width="mid">
		<panel >
			<field name="name" />
			<field name="startDate" />
			<field name="logo" />
			<panel-related field="clientSet" />
			<panel-related field="employeeList" />
		</panel>
		<panel-tabs>
			<panel-related field="employeeList" colSpan="12" form-view="employee-popup-form" grid-view="employee-grid"
				orderBy="sequence" x-selector="checkbox" />
			<panel-related field="clientSet" colSpan="12" x-selector="checkbox" />
			<panel title="Employees editor" >
				<field name="employeeList" showTitle="false" >
					<editor x-viewer="true" >
						<field name="name" />
						<field name="email" />
					</editor>
				</field>
			</panel>	
			<panel title="Employees editor viewer" >
				<field name="employeeList" showTitle="false" >
					<viewer>
						<![CDATA[
							<strong>{{record.name}}</strong>
							<h4>{{record.email}}</h4>
						
						]]>
					</viewer>
					<editor>
						<field name="name" />
						<field name="email" />
					</editor>
				</field>
			</panel>
		</panel-tabs>
		
	</form>
</object-views>